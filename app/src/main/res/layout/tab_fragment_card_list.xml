<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <Button
                android:id="@+id/button_test_category"
                android:text="@string/button_test_text"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="4"/>
        <Button
                android:id="@+id/button_edit_category"
                android:text="@string/button_edit_text"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0"/>

    </LinearLayout>

    <fragment
            android:id="@+id/card_fragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:name="com.patatos.sac.anoca.fragments.CardFragment"
            tools:layout="@layout/fragment_card_list"/>

</LinearLayout>
